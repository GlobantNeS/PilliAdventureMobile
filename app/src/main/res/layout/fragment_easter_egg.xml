<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kaineras.pilliadventuremobile.EasterEggActivity$PlaceholderFragment"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_autor_pilli"
        android:id="@+id/tvAutor" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/ivTavo"
        android:layout_gravity="bottom"
        android:src="@drawable/tavo"
        android:layout_weight="1"
        android:contentDescription="@string/text_desc_ico" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_autor_kaineras"
        android:id="@+id/tvAutorApp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/ivKaineraS"
        android:src="@drawable/kaineras"
        android:layout_weight="1"
        android:contentDescription="@string/text_desc_ico"
        android:scaleType="fitCenter" />

</LinearLayout>
